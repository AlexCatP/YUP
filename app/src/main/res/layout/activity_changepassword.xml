<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:src="@drawable/login_logo" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <EditText
                android:id="@+id/editV_old_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/bg_searchview"
                android:drawableLeft="@drawable/password"
                android:hint=" 请输入原密码"
                android:drawablePadding="6dp"
                android:inputType="numberSigned"
                android:maxLength="11"
                android:paddingBottom="8dp"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:textColorHint="@color/lightGray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editV_new_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/bg_searchview"
                android:drawableLeft="@drawable/password"
                android:hint="请输入要更改的密码"
                android:drawablePadding="6dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:textColorHint="@color/lightGray"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/editV_new_password_again"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/bg_searchview"
                android:drawableLeft="@drawable/confirmpassword"
                android:hint="请输再次入要更改的密码"
                android:drawablePadding="6dp"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:textColorHint="@color/lightGray"
                android:textSize="14sp" />


        </LinearLayout>


        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_btn_next_step"
            android:text="修改"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>